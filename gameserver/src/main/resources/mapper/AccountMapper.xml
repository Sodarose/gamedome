<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.game.gameserver.module.account.dao.AccountMapper">
    <resultMap id="userResultMap" type="com.game.gameserver.module.account.model.Account">
        <id column="id" propertyEntity="id"/>
        <result column="login_id" propertyEntity="loginId"/>
        <result column="password" propertyEntity="password"/>
    </resultMap>
    <select id="findUserByLoginId" resultMap="userResultMap" parameterType="string">
        SELECT id,login_id,password FROM game_user WHERE login_id = #{loginId}
    </select>

    <insert id="createUserByUser" useGeneratedKeys="true" keyProperty="id" parameterType="com.game.gameserver.module.account.model.Account">
        INSERT  INTO game_user(login_id,password) VALUES (#{loginId},#{password})
    </insert>
</mapper>