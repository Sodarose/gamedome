<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.game.gameserver.module.player.dao.PlayerMapper">
    <resultMap id="playerResultMap" type="com.game.gameserver.module.player.entity.Player">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="level" property="level"/>
        <result column="careerId" property="careerId"/>
        <result column="golds" property="golds"/>
        <result column="sceneId" property="sceneId"/>
        <result column="userId" property="userId"/>
        <result column="createTime" property="createTime"/>
        <result column="updateTime" property="updateTime"/>
    </resultMap>
    <select id="getPlayerListByAccountId" resultMap="playerResultMap">
        SELECT id,name,level,careerId,golds,sceneId,userId,createTime,updateTime FROM game_player WHERE userId = #{accountId}
    </select>

    <select id="getPlayerById" resultMap="playerResultMap">
        SELECT id,name,level,careerId,golds,sceneId,userId,createTime,updateTime FROM game_player WHERE id = #{playerId}
    </select>

</mapper>